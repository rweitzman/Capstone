<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/home.css">
    <link rel="stylesheet" href="/scripts/main.js">
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">    
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>
    <title>Aria</title>
</head>
<body>

    <div class="container-fluid">
        <div class="row nav-bar">
                    <div class="navbar-brand aria">
                        <a class="navbar-item" href="/#home">Aria</a>
                    </div>
                    <div>
                        <a class="navbar-item sign-up" id="sign-up">Sign Up</a>
                    </div>
                    <div>
                        <a class="navbar-item sign-in" id="sign-in">Sign In</a>
                    </div>  
        </div>
</div>

    <div class="container-fluid" id="recipes">
        <div class="row w-100">
            <img class="recipe-img">
            <section class="card-index-full"> 
                <div class="card full">
                    <div class="card__header-full"><p><%= recipe.name %></p></div>
                    <div class="card__content-full">
                        <img src="<%= recipe.img %>">
                        <p><%= recipe.description %></p>
                    </div>
                    
                    <div class="card__footer-full"><button><% recipe.name %></button></div>
            </section>
        </div>
    </div>
    <h1 class="review-header">Leave a Review</h1>

    <form action="/reviews/<%= recipe._id %>" method="POST">
  
   
        <input type="text" name="name" placeholder="Name of User">
        <input type="text" name="content" placeholder="Body of Comment">   
    
        <input type="submit" value="Leave a Review!" >
      </form>

    <div class="container comment" id="comments">  
        <div class="row">
        <% allReviews.forEach((review, index) => { %>
            <div>
                <p class="review_name"><%= review.name %> </p> 
            </div>
        <div>
            <p class="review_content"><%= review.content %> </p> 
        </div>
        <div class="row change_comment">
            <div class="col left">
                <form class="edit" action="/reviews/<%= review._id %>?_method=PUT" method="POST">
                    <input type="text" name="content" placeholder="Edit Comment Here">
                    <input type="submit" value="Edit Comment" />
                </form>
            </div>
            <div class="col right">
            <form class="delete" action="/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete Comment" />
            </form>
        
            </div>
        </div>
        <% }) %>
        
        </div>
    </div>

    
    
</body>
</html>